<ul class="home-report-list">
	<h2 style="border-bottom: 1px solid #333; padding-bottom: 13px;margin: 10px 0 0 0;">Últimos informes</h2>
	{{#each model.reports as |report|}}
	<li class="report-item">
		<div class="img">
 			<img src="{{report.picture.url}}" alt="" style="width: 150px; height: auto;">
 		</div>
 		<div class="item-data">
		<h4 class="title">
			{{#link-to 'reports.show' report}}
				{{report.title}}
			{{/link-to}}
		</h4>
		<time>Publicado {{time-ago-in-words report.createdAt}}</time>
		<p class="excerpt">
			{{report.excerpt}}
			{{#link-to 'reports.show' report class="read-more"}}Leer más <span>&rsaquo;</span>{{/link-to}}
		</p>
		</div>
	</li>
	{{/each}}
</ul> 
