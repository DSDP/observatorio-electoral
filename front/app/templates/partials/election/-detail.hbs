<div class="country {{election.country.componentName}}">
	<div class="country-container">
		<div class="country-detail">
			<div class="detail-header">
				<h1>Eleccion {{election.level.name}}  en {{election.country.name}}</h1>
				<i>{{election.instance.name}} {{election.category.name}} y {{election.participation.name}}s 
				del <time>{{election.fixDate}}</time></i>
			</div>

			<div class="detail-content">
				<div class="results">
					<div class="list-header -brief">
						{{#if election.isEjecutive}}
							<div class="item-title">
								Formulas
							</div>
							<div class="item-content ">
								<div class="item -voters">
									Electores
								</div>
								<div class="item -banks">
									Porcentaje
								</div>
							</div>
				        {{/if}}
				        {{#if election.isLegislative}}
							<div class="item-title">
								Resultados
							</div>
							<div class="item-content ">
								<div class="item -voters">
									Electores
								</div>
								<div class="item -banks">
									Porcentaje
								</div>
							</div>
				        {{/if}}
						{{#if election.isReferendum}}
							<div class="item-title">
								Propuesta
							</div>
							<div class="item-content ">
								<div class="item -voters">
									Participaci√≥n
								</div>
								<div class="item -banks">
									Bancas en juego
								</div>
							</div>
						{{/if}}	
						
					</div>
					
					<div class="formula-container">
					{{#each election.formulasSorted as |formula|}}
					      {{#if election.isEjecutive}}
					        {{partial 'partials/formula/ejecutive/brief'}}
					      {{/if}}
					      {{#if election.isLegislative}}
					        {{partial 'partials/formula/legislative/brief'}}
					      {{/if}}
					      {{#if election.isReferendum}}
					      	{{partial 'partials/formula/referendum/brief'}}
					      {{/if}}			
					{{/each}}
					</div>

					<div class="reference">
						<h4>Referencia</h4>
						<p>{{election.history}}</p>
					</div>

				</div>

				<aside>
					<div class="data">
						<div class="data-item">
							{{#if election.votersPercent}}
								<span>{{election.votersPercent}}%</span>
								<small>{{election.voters}}</small>
							{{else}}
								<span>{{election.voters}}</span>
							{{/if}}
							<h6>Votantes</h6>
						</div>

						<div class="data-item">
							{{#if election.positivesPercent}}
								<span>{{election.positivesPercent}}%</span>
								<small>{{election.positives}}</small>
							{{else}}
								<span>{{election.positives}}</span>
							{{/if}}
							<h6>Positivos</h6>
						</div>

						{{#if election.electors}}
						<div class="data-item">
							<span>{{election.electors}}</span>
							<h6>Electores</h6>
						</div>
						{{/if}}

						<div class="data-item">
							{{#if election.blanksPercent}}
								<span>{{election.blanksPercent}}%</span>
								<small>{{election.blank}}</small>
							{{else}}
								<span>{{election.blank}}</span>
							{{/if}}
							<h6>Blancos</h6>
						</div>

						{{#if election.abstensPercent}}
							<div class="data-item">
								<span>{{election.abstensPercent}}%</span>
								<small>{{election.abstens}}</small>
								<h6>Abstenciones</h6>
							</div>
						{{/if}}

						<div class="data-item">
							<span>{{election.nullsPercent}}%</span>
							<h6>Nulos</h6>
						</div>

						<div class="data-item">
							{{#if election.validsPercent}}
								<span>{{election.validsPercent}}%</span>
								<small>{{election.valids}}</small>
							{{else}}
								<span>{{election.valids}}</span>
							{{/if}}
							<h6>Validos</h6>
						</div>

						{{#if election.unchecked}}			
						<div class="data-item">
							<label for="">Sin marcar</label> {{election.unchecked}} ({{election.uncheckedPercent}})
						</div>				
						{{/if}}
					</div>

					<div class="banks">
						{{#if isLegislative}}
							<h6>Bancas renovadas</h6>
							<span>{{election.banks}}</span>
							<small>{{election.cameraType.name}} </small>
						{{/if}}
						{{#if isReferendum}}
							{{#if election.vinculated}}
								Vinculada
							{{else}}
								No Vinculada
							{{/if}}
						{{/if}}
					</div>
				</aside>
			</div>

		</div>
	</div>
</div>