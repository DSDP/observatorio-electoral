<div class="hero">
	<div class="hero-inner">
    	<div class="hero-logo">
    		{{#if model.country.flag.url}}
		        <div class="img-container">
		          <img {{bind-attr src=model.country.flag.url}}>
		        </div>
		     {{/if}}
		</div>
		<div class="hero-copy">
			<h1>{{model.name}}</h1>
			
			<div class="stats">
			  <p>
				Elecci√≥n {{model.level.name}} {{model.type.name}} <br>
				<i> {{model.instance.name}} {{model.category.name}} {{model.participation.name}}</i>
			  </p>
			{{#if isLegislative}}
			{{model.cameraType.name}}
			{{/if}}
			{{#if isReferendum}}
			{{model.vinculated}}
			{{/if}}
			 
			</div>
			<p>{{link-to "Todas las elecciones" "data-entry.elections.elections.index" classNames="btn"}}</p>
		</div>
    	
	</div>
</div>

<div class="section-content">
		
		<div class="profile-data">
			<h4>Datos</h4>
			<div class="data-item">
				<label for="">Electores</label> {{model.electors}} ({{model.electorsPercent}}%)
			</div>
			<div class="data-item">
				<label for="">Votantes</label> {{model.voters}} ({{model.votersPercent}}%)
			</div>
			<div class="data-item">
				<label for="">Nulos</label> {{model.blank}} ({{model.blankPercent}}%)
			</div>
			<div class="data-item">
				<label for="">Recurridos o impugnados</label> {{model.nulls}} ({{model.recurredPercent}}%)
			</div>
			<div class="data-item">
				<label for="">Blancos</label> {{model.recurred}} ({{model.blankPercent}}%)
			</div>
			<div class="data-item">
				<label for="">Validos</label> {{model.valids}} ({{model.validsPercent}}%)
			</div>
		</div>

		<div class="profile-results">
			<h4>Resultados</h4>
			{{#each model.formulas as |formula|}}
			      {{#if isEjecutive}}
			        {{partial 'data-entry/elections/elections/formulas/ejecutive-brief'}}
			      {{/if}}
			      {{#if isLegislative}}
			        {{partial 'data-entry/elections/elections/formulas/legislative-brief'}}
			      {{/if}}
			      {{#if isReferendum}}
			        {{partial 'data-entry/elections/elections/formulas/referendum-brief'}}
			      {{/if}}			
			{{/each}}
		</div>
	</div>
