<form {{action "save" on="submit"}} class="create-event">
  <fieldset>
    <label>
      Titulo
      {{input type="text" value=model.title}}
    </label>
  </fieldset>
  <fieldset>
    <label>
      Contenido
      {{simditor-editor value=model.message }}
    </label>
  </fieldset> 
  <fieldset>
    <label>
      Resumen
      {{input type="text" value=model.excerpt}}
    </label>
  </fieldset> 

  <fieldset>
      <label class="election-publish">
        {{input type="checkbox" name="isEnabled" checked=model.published}}  
        {{#if model.enabled}}
          Publicado <!-- Select Si | No  (Si es referendum) -->
        {{else}}
          Publicar en la web
        {{/if}}
      </label>
  </fieldset>

  <div class="upload-file">
      {{#if model.flag.url}}
        <div class="img-container">
          <img {{bind-attr src=model.flag.url}}>
        </div>
      {{/if}}
      {{file-uploader file=model.flag multiple=false}}
  </div>  
  <fieldset>
    <input type="submit" value="Guardar">
  </fieldset>
</form>
    
